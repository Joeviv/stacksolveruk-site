{/* <!-- INICIO: Script para env√≠o AJAX del formulario --> */}
<script define:vars={{ formspreeEndpoint }}>
  const form = document.getElementById('contactForm');
  const statusMessage = document.getElementById('formStatus');
  const submitButton = form.querySelector('button[type="submit"]');

  if (form) {
    form.addEventListener('submit', async function(event) {
      event.preventDefault(); // Prevenir el env√≠o tradicional
      
      const formData = new FormData(form);
      const originalButtonText = submitButton.textContent;

      // Mostrar mensaje de "Enviando..." y deshabilitar bot√≥n
      statusMessage.textContent = 'Enviando mensaje...';
      statusMessage.className = 'form-status-message status-sending';
      submitButton.disabled = true;
      submitButton.textContent = 'Enviando...';

      try {
        const response = await fetch(form.action, { // Usamos form.action que tiene el endpoint
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json' // Pedir respuesta JSON a Formspree
          }
        });

        if (response.ok) {
          // √âxito
          statusMessage.textContent = '¬°Gracias! Tu mensaje ha sido enviado correctamente.';
          statusMessage.className = 'form-status-message status-success';
          form.reset(); // Limpiar el formulario
          setTimeout(() => { // Opcional: Limpiar mensaje de √©xito despu√©s de unos segundos
            statusMessage.textContent = '';
            statusMessage.className = 'form-status-message';
          }, 5000);
        } else {
          // Error en la respuesta de Formspree (ej. error de validaci√≥n del lado del servidor)
          const data = await response.json();
          if (data.errors && data.errors.length > 0) {
            statusMessage.textContent = data.errors.map(error => error.message).join(', ');
          } else if (data.error) {
             statusMessage.textContent = data.error;
          } else {
            statusMessage.textContent = 'Hubo un problema al enviar tu mensaje. Por favor, int√©ntalo de nuevo.';
          }
          statusMessage.className = 'form-status-message status-error';
        }
      } catch (error) {
        // Error de red u otro error de JavaScript
        console.error('Error al enviar el formulario:', error);
        statusMessage.textContent = 'Error de conexi√≥n. Por favor, verifica tu internet e int√©ntalo de nuevo.';
        statusMessage.className = 'form-status-message status-error';
      } finally {
        // Rehabilitar bot√≥n y restaurar texto original
        submitButton.disabled = false;
        submitButton.textContent = originalButtonText;
      }
    });
  }
</script>
{/* <!-- FIN: Script para env√≠o AJAX del formulario --> */}


