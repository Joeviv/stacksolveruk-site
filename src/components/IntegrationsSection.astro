---
// src/components/IntegrationsSection.astro
// No props needed for this component at the moment.
// We'll use a static image as a visual placeholder.
const placeholderImageUrl = "/images/hero/collage/hero-img-1.jpg"; // Reusing an existing image
---

<section class="integrations-section">
  <div class="section-content">
    <div class="text-content">
      <h2>We Connect Your Systems, Empowering Your Business</h2>
      <p>
        At StacksolverUK.com, we understand that true efficiency is achieved when all your
        tools work in harmony. We specialise in integrating your existing applications,
        from CRMs and ERPs to marketing platforms and, crucially,
        custom solutions based on Claris FileMaker, to create a cohesive
        and powerful technology ecosystem.
      </p>
      {/* IMPORTANT: Update this link to your 'Digital Strategy' page path (e.g., /digital-strategy#integrations) */}
      <a href="/digital-strategy#integrations" class="cta-button-integrations">Discover More</a>
    </div>
    <div class="visual-content">
      <img src={placeholderImageUrl} alt="Visualisation of technology integrations" loading="lazy" />
    </div>
  </div>
</section>

<style>
  .integrations-section {
    background-color: #ffffff; /* White background or a different subtle colour */
    padding: 4rem 2rem;
    text-align: center; /* Centred for mobile initially */
  }

  .section-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column; /* Stacked on mobile */
    align-items: center;
    gap: 2rem;
  }

  .text-content {
    max-width: 600px; /* Max width for text */
    text-align: center; /* Centred by default */
  }

  .text-content h2 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 1rem;
  }

  .text-content p {
    font-size: 1.1rem;
    color: #555;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .cta-button-integrations {
    display: inline-block;
    background-color: #007bff; /* A different colour for this CTA, or use the same as the hero */
    color: white;
    padding: 0.8rem 1.8rem;
    text-decoration: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .cta-button-integrations:hover {
    background-color: #0056b3;
  }

  .visual-content {
    width: 100%;
    max-width: 500px; /* Max size for the image/visualisation */
  }

  .visual-content img {
    width: 100%;
    height: auto;
    border-radius: 8px; /* Rounded borders for the image */
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  /* Media query for desktop (horizontal layout) */
  @media (min-width: 992px) { /* Slightly larger breakpoint for this layout */
    .integrations-section {
      text-align: left; /* Align text to the left on desktop */
    }
    .section-content {
      flex-direction: row; /* Side by side */
      justify-content: space-between;
      align-items: center;
      gap: 3rem;
    }
    .text-content {
      flex: 1; /* Let the text take available space */
      text-align: left; /* Align text to the left */
      max-width: none; /* Remove width restriction if necessary for flex */
    }
    .visual-content {
      flex: 1; /* Let the visual take available space */
      max-width: 500px; /* Maintain a reasonable max size for the image */
    }
  }
</style>