---
// src/components/HeroSection.astro

const imagesRow1 = [
  { src: "/images/hero/collage/hero-img-2.jpg", alt: "Hero collage image 2 (Row 1)", isCircle: true },
  { src: "/images/hero/collage/hero-img-1.jpg", alt: "Hero collage image 1 (Row 1)", isCircle: false },
  { src: "/images/hero/collage/hero-img-4.jpg", alt: "Hero collage image 4 (Row 1)", isCircle: true },
  { src: "/images/hero/collage/hero-img-3.jpg", alt: "Hero collage image 3 (Row 1)", isCircle: false },
];
const imagesRow2 = [
  { src: "/images/hero/collage/hero-img-3.jpg", alt: "Future Rectangular Image D (Row 2)", isCircle: false },
  { src: "/images/hero/collage/hero-img-4.jpg", alt: "Future Circular Image C (Row 2)", isCircle: true },
  { src: "/images/hero/collage/hero-img-2.jpg", alt: "Future Circular Image A (Row 2)", isCircle: true },
  { src: "/images/hero/collage/hero-img-1.jpg", alt: "Future Rectangular Image B (Row 2)", isCircle: false },
];
const finalImagesToRender = [...imagesRow1, ...imagesRow2];
---

<section class="hero-section">
  <div class="hero-content">
    <h1>We Transform Challenges into Opportunities with Technology Tailored to You.</h1>
    <p>At StacksolverUK.com, we don't just create technology; we design the perfect 'stack' (set) of solutions for your company to grow, innovate, and understand the true power of a digital strategy. We help you initiate, redesign, and optimise your processes with cutting-edge technology.</p>
    {/* IMPORTANT: Update this link to your 'About Us' page path (e.g., /about-us) */}
    <a href="/about-us" class="cta-button">Discover how we can help</a>
  </div>

  <div class="hero-visuals">
    {finalImagesToRender.map((image) => (
      <img
        src={image.src}
        alt={image.alt}
        class:list={["visual-item", { "visual-item-circle": image.isCircle }]}
        loading="lazy"
      />
    ))}
  </div>
</section>

{/* CSS Styles (NO CHANGES from original) */}
<style>
  /* ... (Existing styles remain unchanged) ... */
  .hero-section {
    background-color: #fff;
    padding: 4rem 2rem;
    display: flex;
    flex-direction: column; /* Vertical on mobile by default */
    align-items: center;
    text-align: center;
    gap: 2rem;
    overflow: hidden;
  }

  .hero-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-content h1 {
    font-size: clamp(2.5rem, 5vw, 3.2rem);
    margin-bottom: 1rem;
    color: #333;
  }

  .hero-content p {
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    color: #555;
    margin-bottom: 2rem;
  }

  .cta-button {
    display: inline-block;
    background-color: #1a1a1a;
    color: white;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 4px;
    font-size: 1.1rem;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }
  .cta-button:hover {
    background-color: #333;
  }

  .hero-visuals {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    gap: 1rem;
  }

  .visual-item {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 12px;
    grid-area: auto !important;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }

  .visual-item-circle {
    border-radius: 50%;
  }

  @media (min-width: 768px) {
    .hero-section {
      flex-direction: row;
      text-align: left;
      align-items: center;
      justify-content: space-between;
      padding: 5rem 2rem;
      gap: 3rem;
    }
    .hero-content {
      flex: 1 1 40%;
      max-width: 500px;
      margin: 0;
      padding-right: 2rem;
      text-align: left;
    }
    .hero-content h1, .hero-content p {
      text-align: left;
    }
    .hero-visuals {
      flex: 1 1 55%;
      max-width: 700px;
      grid-template-columns: repeat(4, 1fr);
      gap: 1rem;
      margin: 0;
    }
  }

  @media (min-width: 1024px) {
    .hero-section {
      padding: 6rem 3rem;
      gap: 4rem;
    }
    .hero-content {
      max-width: 550px;
      padding-right: 3rem;
    }
    .hero-visuals {
      max-width: 800px;
      grid-template-columns: repeat(4, 1fr);
      gap: 1.25rem;
    }
  }

  @media (max-width: 767px) {
    .hero-section {
      gap: 2rem;
      padding: 3rem 1.5rem;
    }
    .hero-content h1 {
      font-size: clamp(2.2rem, 6vw, 2.8rem);
    }
    .hero-content p {
      font-size: clamp(0.9rem, 4vw, 1.1rem);
    }
    .hero-visuals {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
      max-width: 400px;
    }
  }
</style>