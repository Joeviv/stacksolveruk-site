---
import FeatureCard from './FeatureCard.astro';

// Data for the feature cards - Translated to British English
const featureCardsData = [
    { number: 1, title: 'Business Transformation and Change Management', description: 'Companies across all industries can benefit from a transformation-focused approach...', videoUrl: 'https://comercial-media.s3.amazonaws.com/ClarisConnectShort7.mp4' },
    { number: 2, title: 'Organisational Resilience and Supply Chain Management', description: 'The business environment is increasingly volatile...', videoUrl: 'https://comercial-media.s3.amazonaws.com/cri.mp4' },
    { number: 3, title: 'Leadership in the Digital Age', description: 'Digital transformation requires adjusting how leaders interact with their people...', videoUrl: 'https://comercial-media.s3.amazonaws.com/ClarisConnectShort7.mp4' },
    { number: 4, title: 'Continuous Improvement and Kaizen', description: 'Implementation of continuous improvement processes for operational optimisation.', videoUrl: 'https://comercial-media.s3.amazonaws.com/ClarisConnectShort7.mp4' },
    { number: 5, title: 'Process Automation', description: 'Intelligent solutions to automate critical workflows.', videoUrl: 'https://comercial-media.s3.amazonaws.com/cri.mp4' },
    { number: 6, title: 'Advanced Analytics', description: 'Using data to drive strategic and operational decisions.', videoUrl: 'https://comercial-media.s3.amazonaws.com/cri.mp4' }
];

// Using the translated data
const dataToUse = featureCardsData; 
---

<section class="features-grid-section">
  <div class="section-header">
    <h2>How We Enable Organisational Transformation</h2>
    <p>We offer several value propositions as part of our Organisational Excellence and Transformation services.</p>
  </div>

  <div class="grid-container">
    {dataToUse.map(card => (
        <FeatureCard
            number={card.number}
            title={card.title}
            description={card.description}
            videoUrl={card.videoUrl}
        />
    ))}
  </div>
</section>

<style>
  .features-grid-section {
    padding: 3rem 1rem;
    background-color: #f8f8f8;
    text-align: center;
  }

  .section-header {
    max-width: 800px;
    margin: 0 auto 2rem auto;
    text-align: center;
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .section-header p {
    font-size: 1.1rem;
    color: #555;
  }

  .grid-container {
    display: grid;
    grid-template-columns: 1fr; /* Single column */
    gap: 1.5rem;
    max-width: 700px;
    margin: 0 auto;
    padding: 0 1rem;
  }
</style>