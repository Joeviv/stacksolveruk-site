---
// Import the Header and Footer components
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// You can define props here if the layout needs to receive data (e.g., page title)
// const { title = 'Default Title' } = Astro.props; // Example if you pass title dynamically
interface Props {
	title?: string; // Make title optional for pages that might not set one
}
const { title } = Astro.props;
const siteName = "StacksolverUK.com"; // Define your site name here
const defaultPageTitle = `${siteName} | Intelligent Technology Solutions`;
---

<!doctype html>
<html lang="en-GB"> {/* UPDATED to British English */}
  <head>
    <meta charset="UTF-8" />
    {/* UPDATE THIS DESCRIPTION for your UK site */}
    <meta name="description" content="StacksolverUK.com offers bespoke technology solutions, including custom software development, web design, systems integration, and AI, to help businesses in the UK thrive." /> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> {/* Ensure this file exists in public/ */}
    <meta name="generator" content={Astro.generator} />
    {/* This title will be used if a page doesn't provide one, or combined with it */}
    <title>{title ? `${title} | ${siteName}` : defaultPageTitle}</title> 

    {/* You can add links to global stylesheets here if you have them */}
    {/* <link rel="stylesheet" href="/styles/global.css" /> */}
  </head>
  <body>
    {/* The Header comes before the main content */}
    <Header />

    {/* The UNIQUE content of each page will go here (slot) */}
    <main>
      <slot /> {/* <-- This is the magic of Layouts! */}
    </main>

    {/* The Footer comes after the main content */}
    <Footer />

  </body>
</html>

<style is:global>
  /* Global styles that affect all pages using this layout */
  /* You can move the body styles from index.astro here */
  body {
    font-family: sans-serif; /* Consider choosing a specific font stack */
    margin: 0;
    background-color: #fff; /* Default white background */
    color: #333; /* Default dark text */
    display: flex; /* Added for sticky footer */
    flex-direction: column; /* Added for sticky footer */
    min-height: 100vh; /* Added for sticky footer */
  }
  main {
    flex-grow: 1; /* Added for sticky footer - ensures main content pushes footer down */
  }
  /* You can add more global styles here, such as for links, base typography, etc. */
  a {
    color: #007bff; /* Example link colour */
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }
</style>